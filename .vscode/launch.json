{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "cwd": "${workspaceRoot}",
      "executable": "${workspaceRoot}/target/thumbv7m-none-eabi/debug/window-pill",
      "name": "Debug (OpenOCD)",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "openocd",
      "preLaunchTask": "cargo build debug",
      "device": "STM32F103C8",
      "configFiles": [
        "stlink-v2.cfg",
        "stm32f1x.cfg"
      ],
      "svdFile": "${workspaceRoot}/../STM32F103.svd",
      "runToMain": true,
      "swoConfig": { //https://github.com/japaric/embedded-in-rust/blob/master/content/itm.md
        "enabled": true,
        "cpuFrequency": 72000000,
        "swoFrequency": 2000000,
        "source": "COM7",
        "decoders": [
          {
            "type": "console",
            "label": "ITM",
            "port": 0
          }
        ]
      }
      // "autorun": [
      //   "source -v openocd.gdb",
      // ]
    }
  ]
}