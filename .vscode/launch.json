  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (OpenOCD)",
      "type": "cortex-debug",
      "request": "launch",
      "device": "STM32F103C8",
      "servertype": "openocd",
      "executable": "${workspaceRoot}/target/thumbv7m-none-eabi/debug/window-pill",
      "svdFile": "${workspaceRoot}/../STM32F103.svd",
      "configFiles": [
        "stlink-v2-lila.cfg",
        "stm32f1x.cfg"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "cargo build debug",
      "preLaunchCommands": [
        "monitor arm semihosting enable"
      ],
      //"postLaunchCommands": [
      //   "continue" //if this is here the brakepoints do not work, otherwise random reset due to watchdog timeout
      //],
      //"runToMain": true,
      "preRestartCommands": []
    }
  ]
}